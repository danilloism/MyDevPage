---
import { useTranslations } from '@/i18n/utils';
import HtmlHead from '@/components/HtmlHead.astro';
import type { Language } from '@/i18n/types';
import { DEFAULT_LANGUAGE, LOCALES_INFO } from '@/i18n/consts';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentLocale =
  (Astro.currentLocale as Language | undefined) || DEFAULT_LANGUAGE;
const lang = LOCALES_INFO[currentLocale]?.lang || currentLocale;
const t = useTranslations(currentLocale);
---

<!doctype html>
<html lang={lang}>
  <HtmlHead title={title} />
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
