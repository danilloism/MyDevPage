---
import { LOCALES_INFO } from '@/i18n/consts';
import { getLocalePaths } from '@/i18n/utils';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<head>
  <title>{title}</title>
  <meta charset="UTF-8" />
  <meta
    name="viewport"
    content="width=device-width"
  />
  <link
    rel="sitemap"
    href="/sitemap-index.xml"
  />
  <link
    rel="icon"
    type="image/svg+xml"
    href="/favicon.svg"
  />
  <meta
    name="generator"
    content={Astro.generator}
  />

  {
    getLocalePaths(Astro.url).map(props => (
      <link
        rel="alternate"
        hreflang={LOCALES_INFO[props.lang].lang}
        href={Astro.site?.origin + props.path}
      />
    ))
  }
</head>
